<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShipApp.MVVM.Views.AddMeasurementPage"
             Title="AddMeasurementPage">
    <ScrollView>
        <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">
            <Frame Padding="20"
                   WidthRequest="400"
                   HasShadow="True"
                   CornerRadius="12"
                   BackgroundColor="White"
                   HorizontalOptions="Center">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Add New Measurement" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />

                    <Entry Text="{Binding OriginalMeasurementName}" IsEnabled="False" Placeholder="Original Measurement Name" />
                    <Entry Text="{Binding CleanMeasurementName}" Placeholder="Clean Measurement Name" />

                    <Button Text="Save Measurement"
                            Command="{Binding SaveMeasurementCommand}"
                            Margin="0,20,0,0"
                            HorizontalOptions="Center" />

                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
