<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ShipApp.MVVM.ViewModels"
             x:Class="ShipApp.MVVM.Views.AddMeasurementPopup"
             x:DataType="vm:AddMeasurementViewModel"
             WidthRequest="300">
    <ScrollView>
        <VerticalStackLayout Spacing="10">

            <Label Text="Add New Measurement" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />

            <Entry Text="{Binding OriginalMeasurementName}" IsEnabled="False" Placeholder="Original Measurement Name" />
            <Entry Text="{Binding CleanMeasurementName}" Placeholder="Clean Measurement Name" />

            <HorizontalStackLayout Spacing="12" Margin="0,20,0,0" HorizontalOptions="Center">
                <Button Text="Save Measurement" Command="{Binding SaveMeasurementCommand}" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentView>
